{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (lambda)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${env:USERPROFILE}/.dotnet/tools/dotnet-lambda-test-tool-8.0.exe",
            "args": [
                "--function-handler",
                "quotifyai.Assistant::quotifyai.Assistant.Function::FunctionHandler",
                "--assembly-path",
                "${workspaceFolder}/bin/Debug/net8.0/quotify.Assistant.dll"
            ],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}