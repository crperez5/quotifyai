{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to .NET Functions",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:azureFunctions.pickProcess}",
    },
    {
      "name": "Launch .NET API backend",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build (MinimalAPI)",
      "program": "${workspaceFolder}/app/backend/bin/Debug/net9.0/MinimalAPI.dll",
      "args": [],
      "cwd": "${workspaceFolder}/app/backend",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
        "uriFormat": "%s/scalar/v1"
      },
      "envFile": "${workspaceFolder}/app/backend/.env",
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/app/backend/Views"
      }
    },
    {
      "name": "Launch UI (Windows)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build (UI)",
      "program": "${workspaceFolder}/app/frontend/bin/Debug/net9.0-windows10.0.19041.0/win10-x64/frontend.exe",
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "console": "internalConsole",
      "env": {
          "DOTNET_ROOT": "${env:DOTNET_ROOT}",
          "DOTNET_STARTUP_PROJECT": "${workspaceFolder}"
      }
    },    
    {
      "name": "Attach to Process",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickProcess}"
    }    
  ]
}